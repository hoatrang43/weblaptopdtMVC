
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/Scripts/Controller/CustomerController.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/style_login.css" />
    <link rel="stylesheet" type="text/css"
          href="~/fontawesome/css/all.min.css" />
    <script src='~/js/jquery-3.6.0.min.js' type='text/javascript'></script>
    <style type="text/css">
        body {
            margin: 0px;
        }
    </style>
</head>
<body style="background-image:url('~/image/nen2.png');" ng-app="CustomerApp">
    <form id="form-loign" action="" method="POST" role="form" ng-controller="LoginController">
        <div class="ngoai ">
            <div class="trong">
                <div class="left">
                    <i class="fas fa-user"></i>
                </div>
                <div class="right">
                    <p>Username</p>
                    <input class='a' id='username' type="text" ng-model="Username" placeholder="Username" required />
                    <br /><br />
                    <p>Password</p>
                    <input class='a' id='password' type="password" ng-model="Password" placeholder="Password" required />
                    <br /><br />
                    <input type="checkbox" ng-model="Remember" style="zoom: 1.2" />Ghi nhớ đăng nhập lần sau
                    <br /><br />
                    <button type="submit" class='btn' ng-click="Login(Username, Password, Remember)">Đăng Nhập</button>
                    <br /><br />
                    <div class="forgotpassword" style="padding-right: 50px">
                        <a href="#" style="display: block;  ">Quên mật khẩu?</a>
                    </div>
                    <div class="dangky" ng-controller="DangKiController">
                        <a href="/Home/DangKy" ng-click="Add()" style="display: block">Đăng ký</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
   
</body>
</html>
