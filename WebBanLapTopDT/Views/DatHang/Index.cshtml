
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title> Đặt Hàng</title>
<link href="~/css/laptop.css" rel="stylesheet" />
<link href="~/css/style_pay.css" rel="stylesheet" />
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/Controller/CustomerController.js"></script>
<div id='main1' ng-controller="DatHangController">
    <div id='row'>
        <div id="top-main">
            <div class="item">
                <ul>
                    <li><a href="/Home/Index">Trang chủ</a> </li>
                    <li> <label>/</label><a href="#">Đặt Hàng</a></li>
                </ul>

            </div>
        </div>
        <div id="main">
            <div class="col-12 col-m-12 col-s-12">
                <div id="pay">

                    <div class='dc'>
                        <i class="fas fa-map-marker-alt"></i>
                        <label style="font-size: 20px;line-height:3;">Địa Chỉ Nhận Hàng</label><br />
                        <div style="width: 100%; height: 1px; background-color: #DDD;"></div>
                        <div class='col-3' id='dc-left' style="margin-top:15px">
                            <p>Tên người nhận</p><br />
                            <p>Số điện thoại</p><br />
                            <p>Địa chỉ nhận hàng</p><br />
                        </div>
                        <div class='col-9' id='dc-right'>
                            <input type="text"  ng-model="KhachHang.TenKH"/><br />
                            <input type="text" ng-model="KhachHang.SDT" /><br />
                            <input type="text" ng-model="KhachHang.DiaChi" /><br />
                        </div>
                    </div>
                    <div id="product-cart"  style="min-height: 500px">
                        <div id="product-header">
                            <div class="col-5">
                                <div class="col-8">Tên Sản Phẩm</div>
                                <div class="col-4">Ảnh</div>
                            </div>
                            <div class="col-7">
                                <div class="col-3">Đơn Giá</div>
                                <div class="col-4">Số Lượng</div>
                                <div class="col-3">Thành Tiền</div>                              
                            </div>
                        </div>
                        <div style="width: 100%; height: 1px; background-color: #DDD;"></div>
                        <div id="product-main" ng-repeat="data in dsDonHang" style="height:150px">
                            <div class="col-5">
                                <div class="col-8">{{data.TenSP}}</div>
                                <div class="col-4"> <img style="height: 80px; width: 80px" src="~/image/{{data.Anh}}" /></div>

                            </div>
                            <div id="right-product-header" class="col-7">
                                <div class="col-3">{{data.DonGia|number}} đ</div>                               
                                <div class="col-4" ng-change="TinhTong()" ng-model="data.SoLuong">{{data.SoLuong}}</div>
                                <div class="col-3">{{data.SoLuong*data.DonGia| number}} đ</div>

                            </div>
                            <br />
                        </div>
                    </div>
                    <div id='pthuc'>
                        <label style="font-size: 20px;">Phương Thức Thanh Toán</label><br />
                        <div style="width: 100%; height: 1px; background-color: #DDD;"></div>
                        <input type="radio" name="payment" id="payment1" />
                        <label for="payment1">Thanh toán khi nhận hàng</label>
                        <br />
                        <input type="radio" name="payment" id="payment2" />
                        <label for="payment2">Thanh toán bằng thẻ ATM </label>

                        <br />
                        <input type="radio" name="payment" id="payment3" />
                        <label for="payment3">Thanh toán bằng thẻ VISA</label>

                        <br />
                        <input type="radio" name="payment" id="payment4" />
                        <label for="paymentr4">Thanh toán bằng ví điện tử MOMO </label>
                        <br />
                        <input type="radio" name="payment" id="payment5" />
                        <label for="paymentr5">Thanh toán bằng ví điện tử ZALOPAY </label>
                        <br />

                    </div>
                    <div id="payment">
                        <label class='money'>Tổng Thanh Toán :</label>
                        <label class='total-price'>{{Tong|number}} đ</label><br />
                        <a href="#"><input class="btn-payment" type="button" ng-click="DatHang()" value="ĐẶT HÀNG" /></a>
                    </div>
                </div>
            </div>
            <div style="clear: both"></div>


        </div>
    </div>
   
</div>

