
<!DOCTYPE html>
<html>
<head>
    <title>LAPTOP STORE</title>


    <link href="~/css/laptop.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css"
          href="~/fontawesome/css/all.min.css" />
    <style type="text/css">
        body {
            margin: 0px;
        }
    </style>
    <link href="~/css/DangKy.css" rel="stylesheet" />

    <script src="jquery-3.6.0.js" type='text/javascript'></script>
    <link href="~/css/style_login.css" rel="stylesheet" />
    <script src="~/js/slideshow.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/Scripts/Controller/CustomerController.js"></script>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body ng-app="CustomerApp">

    <div id="header">
        <div id='top-header'>
            <div class="follow">
                <div class='fl'>
                    <label>Theo dõi tại</label>
                    <div class='fb'>
                        <i class="fab fa-facebook"></i>
                    </div>
                    <div class='ig'>
                        <i class="fab fa-instagram-square"></i>
                    </div>
                    <div class='ytb'>
                        <i class="fab fa-youtube"></i>
                    </div>
                </div>
            </div>
            <div class="pic" style="width: 200px">
                <a href="#">
                    <img style="height: 190px;width: 210px;padding-bottom: 10px;margin-left: 30px;"
                         src="~/image/logo1.PNG" />
                </a>
            </div>
            <div class='bell'>
                <i class="far fa-bell" style="color: white"></i>
                <label>Thông báo</label>
            </div>
            <div class="login" ng-controller="LoginController">
                <div class='img' style="color: white" title="{{login_state}}">
                    <i class="far fa-user-circle" data-toggle="modal" data-target="#Login" style="top:2px;color: white"></i>
                    <div class="us">
                        <label data-toggle="modal" data-target="#Login">{{login_state}}</label>
                        <ul style="width:80px">
                            <li><a ng-click="Logout()">{{login_state}}</a></li>

                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <div class="search" ng-controller="SearchController">
            <input class="txt" type="text" ng-model="tensp" placeholder="Nhập tên laptop cần tìm..." />

            <img id="btn-search" src="~/image/kinh.png" ng-click="Search(tensp)" href="/SanPham/Search" />
        </div>
        <div class="cart-zone" ng-controller="CartController">
            <a href="/GioHang/Index">
                <img class="cart-icon" src="~/image/cart1.png" />
                <label class="cart-amount"> {{SL}}</label>
            </a>
        </div>
    </div>
    @*MENU*@
    <div id="nav">
        <div id="menu" ng-controller="MenuController">
            <ul>
                <li><a href="/Home/Index">Trang chủ</a></li>
                <li>
                    <a>Loại Sản Phẩm</a>
                    <ul>
                        <li class="link_container" ng-repeat="l in listLoai">
                            <a ng-click="SelectLoai(l.MaLoai)" href="/SanPham/LoaiSP">{{l.TenLoai}}</a>
                        </li>

                    </ul>
                </li>
                <li>
                    <a href="#">Thương Hiệu</a>
                    <ul>
                        <li class="link_container" ng-repeat="l in listTH">
                            <a ng-click="SelectTH(l.MaThuongHieu)" href="/SanPham/ThuongHieu">{{l.TenThuongHieu}}</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#">Dòng SP</a>
                    <ul>
                        <li class="link_container" ng-repeat="l in listDong">
                            <a ng-click="SelectDong(l.MaDong)" href="/SanPham/DongSP1">{{l.TenDong}}</a>
                        </li>
                    </ul>
                </li>
                <li><a href="/SanPham/SanPhamBanChay">Khuyễn mại</a></li>

                <li><a href="#">Liên hệ</a></li>
            </ul>
        </div>
    </div>
    <div style="width:100%;height:2px;background-color: #09adc0"></div>
    @RenderBody() @*trình bày trang chủ*@
    @*// chèn mã HTML cảu các site mà sử dụng shared layout*@
    <div style="width:100%;height:2px;background-color: #09adc0"></div>
    @*FOOTER*@
    <div id='footer' style="min-height: 300px">
        <div class='col-4 col-4 col-s-12' style=' min-height: 200px; padding-left: 100px;'>
            <div class='product2'>
                <h4>THÔNG TIN LIÊN HỆ</h4><br />
                <div class='tt' style="line-height: 30px;">
                    <p>Phường Nhân Hòa - Mỹ Hào - Hưng Yên</p>
                    <p>laptopstore@gmail.com</p>
                    <p>190012345</p>
                </div>
            </div>
        </div>
        <div class='col-4 col-4 col-s-12' style='min-height: 200px; padding-left: 120px;'>
            <div class='product2'>
                <h4>LAPTOP STORE</h4><br />
                <div class='tt' style="line-height: 30px;padding-left: 20px;">
                    <p><a href="#">Giới thiệu</a></p>
                    <p><a href="#">Hãng LapTop</a></p>
                    <p><a href="#">Phụ Kiện</a></p>
                    <p><a href="#">Khuyến Mãi</a></p>
                    <p><a href="#">Kiến thức bên lề</a></p>
                </div>
            </div>
        </div>
        <div class='col-4 col-4 col-s-12' style='min-height: 200px; padding-left: 80px;'>
            <div class='product2'>
                <h4>THEO DÕI CHÚNG TÔI TẠI</h4><br />
                <div class='tt' style="line-height: 30px;padding-left: 60px;">
                    <p><a href="#">Facebook</a></p>
                    <p><a href="#">Pinterest</a></p>
                    <p><a href="#">Instagram</a></p>
                    <p><a href="#">Youtube</a></p>
                    <p style="padding-left: -10px;">
                        <i style="color: rgba(0,0,0,.54);" class="fab fa-facebook"></i>
                        <i style="color: rgba(0,0,0,.54);" class="fab fa-instagram-square"></i>
                        <i style="color: rgba(0,0,0,.54)" class="fab fa-youtube"></i>
                        <i style="color: rgba(0,0,0,.54)" class="fab fa-pinterest"></i>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @*modal đăng nhập*@
    <div class="modal fade" id="Login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" ng-controller="LoginController">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <form id="form-loign" action="" method="POST" role="form">

                    <div class="ngoai " style="margin-left:-50px;width:600px;margin-top:100px">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="top:0px; width: 50px; height:50px">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <div class="trong" style="top:50px">
                            <div class="left">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="right">
                                <p>Username</p>
                                <input class='a' id='username' style="width:200px" type="text" ng-model="Username" placeholder="Username" required />
                                <br /><br />
                                <p>Password</p>
                                <input class='a' id='password' style="width:200px" type="password" ng-model="Password" placeholder="Password" required />
                                <br /><br />
                                <input type="checkbox" ng-model="Remember" style="zoom: 1.2" />Ghi nhớ đăng nhập lần sau
                                <br /><br />
                                <button type="submit" data-dismiss="{{close}}" style="margin-left:50px" class='btn' ng-click="Login(Username, Password, Remember)">Đăng Nhập</button>
                                <br /><br />
                                <div class="forgotpassword" style="padding-right: 50px">
                                    <a href="#" style="display: block;  ">Quên mật khẩu?</a>
                                </div>
                                <div class="dangky" ng-controller="DangKiController">
                                    <a href="/Home/DangKy"  ng-click="Add()" style="display: block">Đăng ký</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

   

    <script src="~/js/slide.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

