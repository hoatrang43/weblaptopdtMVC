
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Đăng Nhập</title>
    <link href="~/css/style_login.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Areas/Areas/Scripts/Controller/AdminController.js"></script>
    <link rel="stylesheet" type="text/css"
          href="~/fontawesome/css/all.min.css" />
    <script src='~/js/jquery-3.6.0.min.js' type='text/javascript'></script>
    <style type="text/css">
        body {
            margin: 0px;
        }
    </style>
</head>
<body ng-app="AdminApp">
    <div ng-controller="LoginController">
        <form id="form-loign" >
            <div class="ngoai ">
                <div class="trong">
                    <div class="left">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="right">
                        <h1>ĐĂNG NHẬP</h1>
                        <p>Username</p>
                        <input class='a' id='username' type="text" ng-model="UN" placeholder="Username" required />
                        <br /><br />
                        <p>Password</p>
                        <input class='a' id='password' type="password" ng-model="PW" placeholder="Password" required />
                        <br /><br />

                        <button type="submit" style="margin-left:50px" class='btn' ng-click="Login(UN, PW)">Đăng Nhập</button>
                        <br /><br />                     
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
